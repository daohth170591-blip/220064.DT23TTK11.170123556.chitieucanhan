@model Transaction
@{
    ViewData["Title"] = "Chỉnh sửa giao dịch";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>✏️ Chỉnh sửa giao dịch</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Số tiền</label>
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Loại giao dịch</label>
                            <select asp-for="Type" class="form-select">
                                <option value="0">Thu nhập</option>
                                <option value="1">Chi tiêu</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Danh mục</label>
                            <select asp-for="CategoryId" class="form-select">
                                @foreach (var cat in ViewBag.Categories as List<Category>)
                                {
                                    <option value="@cat.Id">@cat.Icon @cat.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label">Ngày</label>
                            <input asp-for="Date" class="form-control" type="date" value="@Model.Date.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Đính kèm hóa đơn mới (tùy chọn)</label>
                            <input type="file" name="attachment" class="form-control" accept="image/*,.pdf" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
